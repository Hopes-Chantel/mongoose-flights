<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>
<div class="topnav">
    <a href = "/flights">All Flights</a>
    <a href = "/flights/new">Add Flight</a>
  </div>
<body>
  <h1>Flights</h1>
  <table>
      <thead>
          <tr>
              <th>Airline</th>
              <th>Airport</th>
              <th>FlightNo</th>
              <th>Departs</th>
          </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(f) { %>
          <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <% if (f.departs < new Date()) { %> 
            <td class="over"><%= f.departs %></td>
               <% } else { %> 
                 <td><%= f.departs %></td>  
                 <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
               </tr>
              <% } %> 
        <% }); %>
      </tbody>
  </table>
</body>
</html>